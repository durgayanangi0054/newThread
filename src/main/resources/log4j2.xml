<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <!-- Define properties for reuse -->
    <Properties>
        <Property name="log-path">logs</Property>
        <Property name="log-pattern">%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1}:%L - %m%n</Property>
    </Properties>

    <!-- Define appenders (output destinations) -->
    <Appenders>
        <!-- Console appender -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="${log-pattern}"/>
        </Console>

        <!-- Rolling file appender with timestamped file name -->
        <RollingFile name="RollingFile" 
                     fileName="${log-path}/app-${date:yyyy-MM-dd_HH-mm-ss-SSS}.log"
                     filePattern="${log-path}/app-${date:yyyy-MM-dd_HH-mm-ss-SSS}-%i.log">
            <PatternLayout pattern="${log-pattern}"/>
            <Policies>
                <!-- Rolls over if file size exceeds 10 MB -->
                <SizeBasedTriggeringPolicy size="10MB"/>
            </Policies>
            <!-- Keep up to 7 archived log files per run -->
            <DefaultRolloverStrategy max="7"/>
        </RollingFile>
    </Appenders>

    <!-- Define loggers -->
    <Loggers>
        <!-- Root logger -->
        <Root level="info">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="RollingFile"/>
        </Root>

        <!-- Specific logger for a package or class -->
        <Logger name="com.example.myapp" level="debug" additivity="false">
            <AppenderRef ref="RollingFile"/>
        </Logger>
    </Loggers>
</Configuration>